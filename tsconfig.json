{
  "compilerOptions": {
    "outDir": "./lib/",
    "target": "es2015",
    "module": "es2015",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["./src/**/*"]
}
